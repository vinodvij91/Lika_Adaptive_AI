# Lika Sciences Platform - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file with real values to git

# ============================================
# CORE (Required for basic functionality)
# ============================================
SESSION_SECRET=your-random-session-secret-here
DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# AI INTEGRATIONS (Required for AI features)
# ============================================
OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================
# EXTERNAL DATABASES
# ============================================
# DigitalOcean PostgreSQL (1.7M+ SMILES)
DO_HOST=your-do-host.db.ondigitalocean.com
DO_USER=doadmin
DO_PASSWORD=your-do-password
DO_PORT=25060
DO_DATABASE=defaultdb

# Supabase (500K+ Materials)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================
# COMPUTE NODES
# ============================================
# Hetzner CPU Node
HETZNER_SSH_HOST=your-hetzner-ip
HETZNER_SSH_USER=root
HETZNER_SSH_PORT=22
HETZNER_SSH_PASSWORD=your-hetzner-password

# Vast.ai GPU Node
VAST_AI_API_KEY=your-vast-ai-key

# ============================================
# SCIENTIFIC APIs (Optional)
# ============================================
# Hugging Face (ESMFold, ML models)
HF_TOKEN=hf_...

# NVIDIA NIM (OpenFold3/AlphaFold)
NVIDIA_API_KEY=nvapi-...

# BioNeMo (Protein predictions)
BIONEMO_API_KEY=your-bionemo-key

# Quantum Computing
QUANTUM_API_KEY=your-quantum-key

# ============================================
# FILE STORAGE (Optional)
# ============================================
# DigitalOcean Spaces
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_ACCESS_KEY_ID=your-access-key
DO_SPACES_SECRET_ACCESS_KEY=your-secret-key
DO_SPACES_CDN_ENDPOINT=https://your-cdn.nyc3.cdn.digitaloceanspaces.com
